{
  "openapi": "3.0.0",
  "info": {
    "title": "API Project5",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Recipes",
      "description": "Endpoints to manage recipes"
    },
    {
      "name": "Users",
      "description": "Endpoints to manage users"
    }
  ],
  "paths": {
    "/recipes": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Obtener todas las recetas",
        "responses": {
          "200": {
            "description": "Lista de recetas"
          }
        }
      },
      "post": {
        "tags": ["Recipes"],
        "summary": "Crear una nueva receta",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "ingredients": { "type": "array", "items": { "type": "string" } },
                  "instructions": { "type": "string" },
                  "category": { "type": "string" },
                  "prepTime": { "type": "number" },
                  "cookTime": { "type": "number" },
                  "imageUrl": { "type": "string" }
                },
                "required": ["name", "ingredients", "instructions"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Receta creada" },
          "422": { "description": "Error de validaci贸n" }
        }
      }
    },
    "/recipes/{id}": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Obtener una receta por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Receta encontrada",
            "content": {
              "application/json": {
                "example": {
                  "name": "Spaghetti Bolognese",
                  "ingredients": ["spaghetti", "ground beef", "tomato sauce", "garlic"],
                  "instructions": "Cook pasta and add sauce.",
                  "category": "Pasta",
                  "prepTime": 15,
                  "cookTime": 30,
                  "imageUrl": "https://example.com/spaghetti.jpg"
                }
              }
            }
          },
          "404": { "description": "No encontrada" }
        }
      },
      "put": {
        "tags": ["Recipes"],
        "summary": "Actualizar receta",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "ingredients": { "type": "array", "items": { "type": "string" } },
                  "instructions": { "type": "string" },
                  "category": { "type": "string" },
                  "prepTime": { "type": "number" },
                  "cookTime": { "type": "number" },
                  "imageUrl": { "type": "string" }
                },
                "required": ["name", "ingredients", "instructions"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Receta actualizada" },
          "422": { "description": "Error de validaci贸n" }
        }
      },
      "delete": {
        "tags": ["Recipes"],
        "summary": "Eliminar receta",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Receta eliminada" },
          "404": { "description": "No encontrada" }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Obtener todos los usuarios",
        "responses": {
          "200": { "description": "Lista de usuarios" }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Crear un nuevo usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "favorites": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "role": { "type": "string" },
                  "bio": { "type": "string" }
                },
                "required": ["username", "email"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuario creado" },
          "422": { "description": "Error de validaci贸n" }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Obtener un usuario por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario encontrado",
            "content": {
              "application/json": {
                "example": {
                  "username": "oscarm",
                  "email": "oscar@example.com",
                  "password": "claveSegura123",
                  "favorites": [],
                  "role": "admin",
                  "bio": "I love cooking and sharing recipes"
                }
              }
            }
          },
          "404": { "description": "No encontrado" }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Actualizar usuario",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "favorites": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "role": { "type": "string" },
                  "bio": { "type": "string" }
                },
                "required": ["username", "email"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Usuario actualizado" },
          "422": { "description": "Error de validaci贸n" }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Eliminar usuario",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Usuario eliminado" },
          "404": { "description": "No encontrado" }
        }
      }
    }
  }
}
